{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true 
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module", // Enable ES6 module syntax
        "ecmaFeatures": {
            "jsx": true // Enable JSX parsing
        }
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/prop-types": "off", // You might disable prop-types check if using TypeScript or not requiring prop types
        "react/jsx-uses-react": "off", // React 17+ doesn't require importing React in JSX
        "react/react-in-jsx-scope": "off", // React 17+ doesn't require importing React in JSX
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // Allow unused variables with underscore prefix
        "indent": ["error", 4], // Adjust the indentation to your preference
        "semi": ["error", "always"], // Enforce using semicolons
        "quotes": ["error", "single"], // Enforce using single quotes
        "jsx-quotes": ["error", "prefer-single"], // Enforce using single quotes for JSX attributes
        "space-before-function-paren": ["error", "always"], // Enforce space before function parentheses
        "comma-dangle": ["error", "always-multiline"], // Enforce trailing commas in multiline objects and arrays
        "no-console": "warn", // Allow console.log with warning
        "no-alert": "error" // Disallow using alert()
    }
}
